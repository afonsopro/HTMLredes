function changeColor() {
    var text = document.querySelector('#changingText h1');
    var colors = ['#ff0000', '#00ff00', '#0000ff', '#ffff00', '#00ffff', '#ff00ff']; // Array of colors
    var coloredText = ''; // Variable to store the colored text

    // Loop through each character of the text
    for (var i = 0; i < text.textContent.length; i++) {
      var color = colors[i % colors.length]; // Get color based on the index modulo the length of colors array
      coloredText += '<span style="color: ' + colors[Math.floor(Math.random()*colors.length)]+ '">' + text.textContent[i] + '</span>'; // Wrap each character with a span and assign color
    } 

    text.innerHTML = coloredText; // Update the text content with colored text
  }
  setInterval(changeColor,1);
